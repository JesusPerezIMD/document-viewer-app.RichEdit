<script src="~/node_modules/devexpress-richedit/dist/dx.richedit.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var nombreArchivo = "Documento.docx";
        var xhr = new XMLHttpRequest();
        xhr.open("GET", "@Url.Action("Index", "Controlador")?nombreArchivo=" + encodeURIComponent(nombreArchivo));
        xhr.onload = function () {
            if (xhr.status === 200) {
                // handle success
            } else {
                // handle error
            }
        };
        xhr.send();
    });
</script>

@(Html.DevExpress().RichEdit("richEdit")
    .Width("100%")
    .Height(800)
    .AutoCorrect(a => a
        .CorrectTwoInitialCapitals(true)
        .ReplaceTextAsYouType(true)
        .ReplaceInfoCollectionSettings(s =>
        {
            s.CaseSensitive(true);
            s.ReplaceInfoCollection(c =>
            {
                c.Add().What("(c)").With("©");
                c.Add().What("wnwd").With("well-nourished, well-developed");
            });
        })
    )
    .Bookmarks(b => b
        .Visibility(DevExpress.AspNetCore.RichEdit.Visibility.Visible)
        .Color(System.Drawing.Color.Blue)
    )
    .Ribbon(ribbon => ribbon
        .ActiveTabIndex(0)
    )
    .Open((System.Func<System.IO.Stream>)(() => new System.IO.MemoryStream(Model.DocumentBytes)), (DevExpress.AspNetCore.RichEdit.DocumentFormat)Model.DocumentFormat)
)

